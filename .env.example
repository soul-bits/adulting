# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Google Calendar API Configuration
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/callback

# VAPI API Configuration (for phone calls)
# Get your API key from: https://vapi.ai
VAPI_API_KEY=your_vapi_api_key_here

# Gmail API Configuration (for sending emails)
# Get refresh token from Google OAuth2 flow
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token_here

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Optional: Google Calendar Webhook Configuration
# Set this if you want to use webhooks instead of polling
GOOGLE_WEBHOOK_SECRET=your_webhook_secret_here
